{
  "compilerOptions": {
    
    "target": "es2017",                                
    "module": "commonjs",                           
    "lib": ["es6"],                                 
    "outDir": "./dist",                              
    "rootDir": ".",                             
    "removeComments": true,                      

    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                             

    "esModuleInterop": true,                        

    "resolveJsonModule": true,
    "experimentalDecorators": true,              

    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*":["./src/controllers/*"],
      "@models/*":["./src/models/*"],
      "@config/*":["./src/config/*"]
    },
    "emitDecoratorMetadata": true    
  }
}
